
//que nombre podria darle a  este skecht       
#include <SoftwareSerial.h>

SoftwareSerial esp8266(2, 3); // RX, TX

void setup() {
  Serial.begin(9600);
  esp8266.begin(9600);
  delay(1000);

  Serial.println("Configurando el modulo ESP8266...");

  // Enviar comandos AT para configurar el módulo
  esp8266.println("AT"); // Verificar comunicación
  if (esp8266.find("OK")) {
    Serial.println("Comunicacion con ESP8266 establecida.");
  } else {
    Serial.println("Error en la comunicacion con ESP8266.");
  }
{
  Serial.println("Conectandose a la red Wi-Fi...");
  esp8266.print("AT+CWJAP=\"fh_80d1e8\",\"4567gljc\"\r\n"); // Reemplaza "nombre_red" y "contrasena" con los datos de tu red Wi-Fi
 delay (1000);
  while (esp8266.available()) {
    Serial.write(esp8266.read());
}
 }
}
void loop() {
   // Espera la respuesta del módulo ESP8266
  if (esp8266.available()) {
    String response = esp8266.readStringUntil('\n');
    Serial.println(response);
    
    // Verifica si la conexión ha sido exitosa
    if (response.indexOf("OK") != -1) {
      Serial.println("Conexion exitosa a la red Wi-Fi.");
      // Aquí puedes agregar el código adicional para realizar acciones una vez que estés conectado a la red Wi-Fi
    }
    // Verifica si ha habido un error en la conexión
    else if (response.indexOf("ERROR") != -1) {
      Serial.println("Error al conectarse a la red Wi-Fi.");
      // Aquí puedes agregar el código adicional para manejar el error de conexión
    }
  }
}
